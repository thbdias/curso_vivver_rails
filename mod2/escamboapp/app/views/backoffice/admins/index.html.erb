
<h1 class="page-header">Administradores</h1>

<div class="panel panel-default"> <!-- begin table -->
    <div class="panel-heading">
        Listando Administradores
        <%= link_to  new_backoffice_admin_path, class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do%>
            <i class="fa fa-plus"></i>
        <% end %>                        
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>E-mail</th>          
                        <th></th>                              
                    </tr>
                </thead>
                <tbody>
                    <% @admins.each do |admin| %>
                        <tr>
                            <td><%= admin.id %></td>
                            <td><%= admin.email %></td> 
                            <td style="width: 150px">

                                <%= link_to  edit_backoffice_admin_path(admin.id), class:"btn btn-primary btn-circle" do %>    
                                    <i class="fa fa-edit"></i>                                                    
                                <% end %>

                                <button type="button" disabled class="btn btn-danger btn-circle"><i class="fa fa-minus"></i>
                                </button>
                            </td>                                       
                        </tr>                                    
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div> <!-- end table-->
